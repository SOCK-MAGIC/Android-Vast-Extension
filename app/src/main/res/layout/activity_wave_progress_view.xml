<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.view.WaveProgressViewActivity">

    <com.ave.vastgui.tools.view.progress.WaveProgressView
        android:id="@+id/waveProgressView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        app:progress_current_value="0"
        app:wave_progress_stroke_ratio="0.0"
        app:wave_progress_space_ratio="0.0"
        tools:ignore="MissingConstraints" />

    <com.ave.vastgui.tools.view.textview.MarqueeTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="start"
        android:text="设置进度" />

    <com.google.android.material.slider.Slider
        android:id="@+id/bottom_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:valueFrom="0.0"
        android:valueTo="100.0"/>

    <com.ave.vastgui.tools.view.textview.MarqueeTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="start"
        android:text="设置Stroke ratio" />

    <com.google.android.material.slider.Slider
        android:id="@+id/setStrokeRatio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:valueFrom="0.0"
        android:valueTo="0.5" />

    <com.ave.vastgui.tools.view.textview.MarqueeTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="start"
        android:text="设置Space ratio" />

    <com.google.android.material.slider.Slider
        android:id="@+id/setSpaceRatio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:valueFrom="0.0"
        android:valueTo="0.5" />

</LinearLayout>
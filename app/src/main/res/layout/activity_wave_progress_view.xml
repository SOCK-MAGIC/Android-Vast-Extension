<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.view.WaveProgressViewActivity">

    <com.ave.vastgui.tools.view.progress.WaveProgressView
        android:id="@+id/waveProgressView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        app:progress_current_value="50" />

    <com.ave.vastgui.tools.view.progress.WaveProgressView
        android:id="@+id/imageProgressView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        app:progress_current_value="50"
        app:wave_progress_image="@drawable/ic_github" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="start"
        android:text="@string/set_progress" />

    <com.google.android.material.slider.Slider
        android:id="@+id/progressSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:contentDescription="@string/set_progress"
        android:valueFrom="0.0"
        android:valueTo="100.0" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="start"
        android:text="@string/set_space" />

    <com.google.android.material.slider.Slider
        android:id="@+id/spaceSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:contentDescription="@string/set_space"
        android:valueFrom="0.0"
        android:valueTo="100.0" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="start"
        android:text="@string/set_stroke" />

    <com.google.android.material.slider.Slider
        android:id="@+id/strokeSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:contentDescription="@string/set_stroke"
        android:valueFrom="0.0"
        android:valueTo="100.0" />

</LinearLayout>
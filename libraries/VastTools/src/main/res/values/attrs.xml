<resources>
    <declare-styleable name="DownloadCircleView">
        <!-- Radius of the download circle.
        If you set specific values for layout_width and layout_height,
        you don't need to set this value. -->
        <attr name="circle_radius" format="dimension|reference"/>
        <!-- Width of the download circle progress background. -->
        <attr name="progress_background_width" format="dimension"/>
        <!-- Text size of the progress. -->
        <attr name="progress_text_size" format="dimension|reference"/>
        <!-- Color of the download progress. -->
        <attr name="progress_color" format="color|reference"/>
        <!-- Color of the download progress start. -->
        <attr name="progress_start_color" format="color|reference"/>
        <!-- Color of the download progress end. -->
        <attr name="progress_end_color" format="color|reference"/>
        <!-- Color of the download progress background. -->
        <attr name="progress_background_color" format="color|reference"/>
        <!-- Color of the progress. -->
        <attr name="progress_text_color" format="dimension|reference"/>
    </declare-styleable>

    <declare-styleable name="RatingView">
        <!--Star bitmap interval width-->
        <attr name="star_interval_width" format="dimension" />
        <!--Star bitmap width-->
        <attr name="star_width" format="dimension" />
        <!--Star bitmap height-->
        <attr name="star_height" format="dimension" />
        <!--Number of star-->
        <attr name="star_max" format="integer" />
        <!--Star rating-->
        <attr name="star_rating" format="float" />
        <!--Star unselected bitmap-->
        <attr name="star_unselected" format="reference" />
        <!--Star selected bitmap-->
        <attr name="star_selected" format="reference" />
        <!--StarBar select method-->
        <attr name="star_select_method" format="enum">
            <enum name="star_unable" value="0" />
            <enum name="star_click" value="1" />
            <enum name="star_sliding" value="2" />
        </attr>
        <!--Star orientation-->
        <attr name="star_orientation" format="enum">
            <enum name="star_vertical" value="1" />
            <enum name="star_horizontal" value="0" />
        </attr>
    </declare-styleable>
</resources>
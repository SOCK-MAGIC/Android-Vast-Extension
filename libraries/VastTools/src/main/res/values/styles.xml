<resources>

    <style name="BaseBadgeView">
        <item name="badge_color">@color/md_theme_error</item>
        <item name="bubble_radius">10dp</item>
        <item name="bubble_text_color">@color/white</item>
        <item name="bubble_text_size">8sp</item>
        <item name="bubble_text_max_num">99</item>
        <item name="dot_radius">5dp</item>
    </style>

    <style name="BaseBadgeLayout" parent="BaseBadgeView">
        <item name="icon">@drawable/ic_badge_default_icon</item>
        <item name="icon_top_margin">5dp</item>
        <item name="icon_start_margin">5dp</item>
        <item name="icon_end_margin">5dp</item>
        <item name="icon_bottom_margin">5dp</item>
    </style>

    <style name="BaseCropView">
        <item name="crop_mask_layer_color">@color/default_crop_frame_mask_color</item>
        <item name="crop_frame_type">circle</item>
        <item name="crop_frame_width">@dimen/default_crop_frame_width</item>
        <item name="crop_frame_height">@dimen/default_crop_frame_height</item>
        <item name="crop_frame_stroke_color">@color/md_theme_primaryFixedDim</item>
    </style>

    <style name="BaseCropViewLayout" parent="BaseCropView" />

    <style name="BaseMarqueeTextView" parent="Widget.AppCompat.TextView">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="BaseProgressView">
        <item name="progress_maximum_value">100.0</item>
        <item name="progress_current_value">0.0</item>
        <item name="progress_text_size">12sp</item>
        <item name="progress_text_color">@color/md_theme_onPrimary</item>
        <item name="progress_background_color">@color/md_theme_primaryContainer</item>
        <item name="progress_color">@color/md_theme_primary</item>
    </style>

    <style name="BaseArcProgressView" parent="BaseProgressView">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="arc_progress_background_width">10dp</item>
        <item name="arc_progress_start_color">@color/md_theme_primary</item>
        <item name="arc_progress_end_color">@color/md_theme_primary</item>
        <item name="arc_progress_show_start_circle">false</item>
        <item name="arc_progress_show_end_circle">true</item>
    </style>

    <style name="BaseHorizontalProgressView" parent="BaseProgressView">
        <item name="horizontal_progress_stroke_width">5dp</item>
    </style>

    <style name="BaseHorizontalTextProgressView" parent="BaseProgressView">
        <item name="horizontal_text_progress_height">20dp</item>
        <item name="horizontal_text_progress_textbox_stroke_width">5dp</item>
    </style>

    <style name="BaseLineTextProgressView" parent="BaseProgressView">
        <item name="linetext_progress_textbox_stroke_width">5dp</item>
    </style>

    <style name="BaseWaveProgressView" parent="BaseProgressView">
        <item name="wave_progress_stroke_color">@color/md_theme_secondary</item>
    </style>

    <style name="BaseRatingView">
        <item name="star_interval_width">@dimen/default_star_interval_width</item>
        <item name="star_height">@dimen/default_star_height</item>
        <item name="star_width">@dimen/default_star_width</item>
        <item name="star_select_method">@integer/default_rating_select_method</item>
        <item name="star_count">@integer/default_rating_star_count</item>
        <item name="star_orientation">@integer/default_rating_star_orientation</item>
        <item name="star_selected">@drawable/ic_star_default_selected</item>
        <item name="star_unselected">@drawable/ic_star_default_unselected</item>
    </style>

    <style name="BaseVp2Indicator">
        <item name="indicator_style">circle</item>
        <item name="indicator_selected_color">@color/md_theme_primary</item>
        <item name="indicator_unselected_color">@color/md_theme_primaryContainer</item>
        <item name="indicator_circle_radius">5dp</item>
        <item name="indicator_item_distance">12dp</item>
    </style>
</resources>